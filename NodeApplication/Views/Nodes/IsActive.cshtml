@model List<NodeApplication.Models.Node> 

@{
    ViewData["Title"] = "Active Nodes";
}

<h2>Active Nodes</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Node ID</th>
                <th>Node Name</th>
                <th>Parent Node ID</th>
                <th>Is Active</th>
                <th>Start Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var node in Model)
            {
                <tr>
                    <td>@node.NodeId</td>
                    <td>@node.NodeName</td>
                    <td>@(node.ParentNodeId.HasValue ? node.ParentNodeId.ToString() : "N/A")</td>
                    <td>@node.IsActive</td>
                    <td>@node.StartDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No active nodes found.</p>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>